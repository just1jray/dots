# Git Configuration
# User settings should be configured locally per machine using:
# git config --global user.name "Your Name"
# git config --global user.email "your.email@example.com"

[core]
    excludesfile = ~/.gitignore_global
    editor = nvim
    autocrlf = input
    # Improve performance for large repositories
    preloadindex = true
    fscache = true

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    default = simple
    autoSetupRemote = true
    followTags = true

[fetch]
    prune = true
    pruneTags = true

[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[diff]
    colorMoved = default

[merge]
    conflictstyle = diff3
    # Show common ancestor in merge conflicts

[rebase]
    autoStash = true
    autoSquash = true

[alias]
    st = status -sb
    co = checkout
    cob = checkout -b
    br = branch
    ci = commit
    cm = commit -m
    df = diff
    dfc = diff --cached
    lg = log --oneline --graph --decorate
    last = log -1 HEAD --stat

[help]
    autocorrect = 1

[credential]
    helper = cache --timeout=3600

# Platform-specific settings
[includeIf "gitdir:~/"]
    path = ~/.gitconfig.local
