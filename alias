# Universal aliases
# lolcat
command -v lolcat &> /dev/null && LOL='| lolcat' || LOL=""

alias dir="clear ; ls -lah $LOL"
alias dev="cd ~/Developer ; dir"
alias src="cd ~/Developer/src ; dir"
alias docs="cd ~/Documents ; dir"
alias dots="cd ~/Developer/dotfiles ; dir"

alias swag="echo swag swag $LOL"

alias zfig="vim ~/.zshrc"
alias zfresh="source ~/.zshrc"

alias c="clear"
alias cls="clear"
alias claer="clear"
alias comms="ls /bin $LOL && ls /sbin $LOL"
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"
alias activate="source ./venv/bin/activate"

# ssh configs
alias pi3="ssh pi@192.168.50.93"
