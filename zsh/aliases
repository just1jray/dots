# ZSH Configuration Aliases
# shellcheck disable=SC2139,SC2154  # intentional expansion at definition time
alias zfig="$EDITOR ~/.zshrc"
alias zfresh="source ~/.zshenv && source ~/.zshrc"

# Refresh all configurations
efresh() {
    echo "♻️  Refreshing configurations..."
    source ~/.zshenv && source ~/.zshrc
    echo "✓ ZSH config reloaded"

    if [[ -n "$TMUX" ]]; then
        tmux source-file ~/.tmux.conf
        echo "✓ Tmux config reloaded"
    fi

    echo "✨ All configs refreshed!"
}

# Navigation Aliases
alias dev="cd ~/Developer && ls -lah --color=auto"
alias src="cd ~/Developer/src && ls -lah --color=auto"
alias dots="cd ~/Developer/src/dots && ls -lah --color=auto"
alias docs="cd ~/Documents"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# Common Command Aliases
alias ls="ls --color=auto"
alias ll="ls -lah --color=auto"
alias la="ls -la --color=auto"
alias cls="clear"
alias grep="grep --color=auto"
alias egrep="egrep --color=auto"
alias c="claude"

# Safety Aliases (verbose output without interactive prompts)
alias rm="rm -v"
alias cp="cp -v"
alias mv="mv -v"
alias mkdir="mkdir -pv"

# System Information
alias du1="du -h -d 1"
alias df="df -h"
alias path='echo -e ${PATH//:/\\n}'
psg() { ps aux | grep -v grep | grep -i -e VSZ -e "$@"; }
alias myip="curl -s ifconfig.me"

# Python Virtual Environment
alias activate="source ./venv/bin/activate"
mkvenv() { [[ ! -d "./venv" ]] && python -m venv venv; }

# OS Specific Aliases and Functions
if [[ $(uname) == "Linux" ]]; then
    # Run updates
    alias up="sudo apt update -y && sudo apt upgrade -y && sudo apt autoremove -y"
fi

if [[ $(uname) == "Darwin" ]]; then
    # File visibility
    show() { defaults write com.apple.Finder AppleShowAllFiles true; killall Finder; }
    hide() { defaults write com.apple.Finder AppleShowAllFiles false; killall Finder; }

    # Enhanced man pages
    manp() { man -t "$@" | open -f -a "Preview"; }
    manx() { open "x-man-page://$*"; }

    # Power management
    power() {
        # Get connected charger info
        powerAdapter=$(system_profiler SPPowerDataType | grep "Power Adapter" | awk '{print $2}')
        wattage=$(system_profiler SPPowerDataType | grep "Wattage" | awk '{print $3}')

        # Show charger info if connected
        if [[ -z $powerAdapter && -z $wattage ]]; then
            echo "No power adapter connected."
        else
            [[ -n $powerAdapter ]] && echo $powerAdapter
            [[ -n $wattage ]] && echo "${wattage}W"
        fi
    }
fi

# TMUX Aliases
if command -v tmux &> /dev/null; then
    alias t="tmux new-session -A -s sesh"
    alias sesh="t"  # Alias for `t` - both attach to the "sesh" session
    alias tfresh="tmux source-file ~/.tmux.conf"
    # shellcheck disable=SC2139  # intentional expansion at definition time
    alias tfig="$EDITOR ~/.tmux.conf"

    # Reset tmux session (works from inside or outside tmux)
    # Use -c flag to also clear tmux-resurrect saved state
    treset() {
        # Clear resurrect saved state if -c flag provided
        if [[ "$1" == "-c" ]]; then
            rm -f ~/.tmux/resurrect/last 2>/dev/null
            echo "Cleared tmux-resurrect saved state"
        fi

        if [[ -n "$TMUX" ]]; then
            # Inside tmux: create new session, switch to it, kill old one
            local old_session
            old_session=$(tmux display-message -p '#S')
            tmux new-session -d -s "sesh-tmp"
            tmux switch-client -t "sesh-tmp"
            tmux kill-session -t "$old_session"
            tmux rename-session "sesh"
        else
            # Outside tmux: kill and start fresh
            tmux kill-session -t sesh 2>/dev/null
            tmux new-session -s sesh
        fi
    }
fi
